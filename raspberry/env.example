# Environment Configuration for Sonoff WiFi Socket Server
# Copy this file to .env and modify the values as needed

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
SERVER_DEBUG=false
SERVER_LOG_LEVEL=INFO

# CORS Configuration
CORS_ORIGINS=["*"]

# Security Configuration
API_KEY=
ENABLE_AUTH=false

# Sonoff Device Configuration
SONOFF_DISCOVERY_TIMEOUT=30
SONOFF_MAX_DEVICES=100
SONOFF_REQUEST_TIMEOUT=10
SONOFF_RETRY_ATTEMPTS=3
SONOFF_RETRY_DELAY=1.0

# Network Configuration
NETWORK_LOCAL_NETWORK=192.168.1.0/24
NETWORK_SCAN_PORTS=[80, 8080, 443, 8443]
NETWORK_CONNECTION_TIMEOUT=5
NETWORK_MAX_CONCURRENT_CONNECTIONS=10

# WebSocket Configuration
WEBSOCKET_MAX_CONNECTIONS=100
WEBSOCKET_PING_INTERVAL=30.0
WEBSOCKET_PING_TIMEOUT=10.0
WEBSOCKET_EVENT_QUEUE_SIZE=1000
WEBSOCKET_BROADCAST_EVENTS=true

# Logging Configuration
LOGGING_LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"
LOGGING_LOG_FILE=
LOGGING_LOG_ROTATION="1 day"
LOGGING_LOG_RETENTION="30 days"
LOGGING_ENABLE_STRUCTURED_LOGGING=true
LOGGING_LOG_JSON=false
